(require '[task-c4.core :refer :all])
(println "Запуск производственной линии на 10 секунд...")
(start)
(Thread/sleep 10000)
(println "\nСостояние хранилищ:")
(println "Ore:" @(ore-storage :storage))
(println "Metal:" @(metal-storage :storage))
(println "Gears:" @(gears-storage :storage))
(println "Lumber:" @(lumber-storage :storage))
(println "Safe:" @(safe-storage :storage))
(println "Cuckoo-clock:" @(cuckoo-clock-storage :storage))
(stop)
(println "\nПроверка завершена")
